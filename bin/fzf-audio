#!/usr/bin/env zsh
#
# fzf-audio - fzf interface for SwitchAudioSource

__fzf-audio() {
  SwitchAudioSource -s \
    "$(SwitchAudioSource -a | grep "(output)" |\
    fzf-tmux --height=8 --cycle --no-mouse --no-multi |\
    cut -f1 -d'(' | xargs)"
}

command -v SwitchAudioSource >/dev/null && __fzf-audio
