#!/bin/bash
#
# Extract files based on suffix

function _fatal {
    echo "$*" >&2
    exit 1
}

if [ -f "$1" ] ; then
case $1 in
        *.tar|*.tar.*)  tar -xf "$1"     ;;
        *.bz2)          bunzip2 "$1"     ;;
        *.rar)          rar x "$1"       ;;
        *.gz)           gunzip "$1"      ;;
        *.tbz2)         tar xvjf "$1"    ;;
        *.tgz)          tar xvzf "$1"    ;;
        *.zip)          unzip "$1"       ;;
        *.Z)            uncompress "$1"  ;;
        *.7z)           7z x "$1"        ;;
        *)              _fatal "don't know how to extract '$1'..." ;;
   esac
else
    _fatal "'$1' is not a valid file!"
fi
