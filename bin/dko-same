#!/usr/bin/env bash

__dotfiles_dir="${HOME}/.dotfiles"
. "${__dotfiles_dir}/lib/helpers.sh"
. "${__dotfiles_dir}/lib/pretty.bash"

# $1 source file path
# $2 dest file path
# return success if fulltargetpath is resolvedpath
__dko_same() {
  local sourcepath="$1"
  local targetpath="$2"

  if ! __dko_has "realpath"; then
    __dko_err "Missing realpath command (e.g. brew install coreutils)"
    return 1
  fi

  if [[ -f "$targetpath" ]] || [[ -d "$targetpath" ]]; then
    local resolvedpath
    resolvedpath=$(realpath "$targetpath")

    [[ "$resolvedpath" == "$sourcepath" ]] && {
      __dko_ok "${targetpath} links ${resolvedpath}"
      return 0
    }

    __dko_warn "${targetpath} not linked to ${resolvedpath}"
    return 1
  fi

  # does not exist
  __dko_ok "${targetpath} not found"
  return 2
}

__dko_same "$@"
