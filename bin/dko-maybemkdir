#!/usr/bin/env bash

cd -- "$(dirname "$0")/.." || exit 1
__dotfiles_dir="$(pwd)"
. "${__dotfiles_dir}/lib/pretty.bash"

__maybemkdir() {
  if [[ ! -d "$1" ]]; then
    read -p "Directory ${1} does not exist, create? [y/N] " -r
    [[ ! $REPLY =~ ^[Yy]$ ]] && return 1
    mkdir -p -- "$1" && __dko_ok "Created ${1}"
  fi
}

__maybemkdir "$1"
