#!/usr/bin/env bash

set -e

# =============================================================================
# Require DOTFILES
# =============================================================================

if [[ -z "$DOTFILES" ]]; then
  cd -- "$(dirname "$0")/.." || exit 1
  DOTFILES="$PWD"
fi
. "${DOTFILES}/lib/helpers.sh"
. "${DOTFILES}/lib/pretty.bash"
. "${DOTFILES}/shell/node.sh"
export PATH="${DOTFILES}/bin:${PATH}"

fnm use default
fnm list
node --version
npm --version

# =============================================================================
# Main
# =============================================================================

__install() {
  __dko_status "Installing global node packages"
  while read -r package; do
    dko-header "$package"
    # npm ls --global --parseable --depth=0 "$package" ||
    npm install --location=global --omit=dev "$package"
    echo
    echo
  done < "${DOTFILES}/node/default-packages"
}
__dko_has npm && __install "$@"
